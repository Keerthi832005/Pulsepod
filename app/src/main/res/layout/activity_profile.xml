<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="24dp"
    tools:context=".ProfileActivity">

    <!-- Back Button (top-left corner) -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contentDescription="Back Button"
        android:padding="8dp"
        android:src="@drawable/backbutt" />

    <!-- Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_2"
        android:contentDescription="Profile Image"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        app:strokeColor="@android:color/white"
        app:strokeWidth="3dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Keerthi Vasan"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="keerthi@example.com"
        android:textColor="#CCCCCC"
        android:textSize="16sp" />

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/editProfileBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/profileEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Edit Profile ✏️"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/rounded_button"
        android:padding="10dp" />

    <!-- MY COMMANDS Button -->
    <Button
        android:id="@+id/myCommandsBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editProfileBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="MY COMMANDS"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/rounded_button_purple"
        android:padding="10dp" />

    <!-- Bottom Left: Tune -->
    <TextView
        android:id="@+id/textTune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="12dp"
        android:text="Tune"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- Bottom Center: Tap -->
    <TextView
        android:id="@+id/textTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:text="Tap"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- Bottom Right: Connect -->
    <TextView
        android:id="@+id/textConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:text="Connect"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
