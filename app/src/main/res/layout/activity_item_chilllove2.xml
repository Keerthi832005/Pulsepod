<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/rounded_dark_bg"
    android:layout_margin="8dp">

    <!-- Podcast Image -->
    <ImageView
        android:id="@+id/podcastImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:src="@drawable/romantic_truth"
        android:background="@drawable/rounded_image"
        android:clipToOutline="true" />

    <!-- Podcast Texts -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/podcastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romantic Truth"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/podcastDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love is Life"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</LinearLayout>
