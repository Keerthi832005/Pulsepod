<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Rose color background -->
    <solid android:color="#FF4C70" /> <!-- A nice rose pink -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#E63956" /> <!-- darker rose border -->

    <!-- Padding inside box -->
    <padding
        android:left="12dp"
        android:top="6dp"
        android:right="12dp"
        android:bottom="6dp" />
</shape>
