<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="#1E293B"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Podcast Image -->
        <ImageView
            android:id="@+id/podcastImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:src="@drawable/philosophy1"
            android:contentDescription="Podcast Image" />

        <!-- Play Button -->
        <ImageView
            android:id="@+id/playButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/play_button"
            android:contentDescription="Play Podcast"
            android:padding="6dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/podcastTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/podcastImage"
            android:layout_toStartOf="@id/playButton"
            android:layout_marginStart="12dp"
            android:text="Philosophy of Life"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true" />

        <!-- Description -->
        <TextView
            android:id="@+id/podcastDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/podcastTitle"
            android:layout_toEndOf="@id/podcastImage"
            android:layout_toStartOf="@id/playButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Exploring ideas that shaped human thought"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
