<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#1C263A"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/podcastImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/google" /> <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/podcastTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Podcast Title"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/podcastDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Podcast Description goes here, a brief overview of the episode."
        android:textColor="#AAB2C8"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/podcastMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mood: Chill &amp; Love"
        android:textColor="#888888"
        android:textSize="10sp"
        android:layout_marginTop="4dp"/>

</LinearLayout>

</LinearLayout>