<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="0dp">

    <!-- Top Buttons -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Go to Podcast Button -->
        <Button
            android:id="@+id/btnGoToPodcast"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:text="Go to\nPodcast"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Listen to My Podcast Button -->
        <Button
            android:id="@+id/btnListenToMyPodcast"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:text="Listen to\nMy Podcast"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>



    <!-- Main Panel -->
    <LinearLayout
        android:id="@+id/mainPanel"
        android:layout_width="256dp"
        android:layout_height="414dp"
        android:layout_below="@id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/selection"
        android:elevation="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">
    </LinearLayout>

    <!-- Mic Icon Center -->
    <ImageView
        android:id="@+id/centerMic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_mic_center"
        android:contentDescription="Mic Icon" />

    <!-- Podcast Icon Near Mic -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@id/centerMic"
        android:layout_toEndOf="@id/centerMic"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="40dp"
        android:src="@drawable/podcast_2"
        android:contentDescription="Podcast 2" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:text="Listen Infinitely"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:text="Listen Your Favourite Podcast\nAnywhere, Anytime"
        android:textAlignment="center"
        android:textColor="#777777"
        android:textSize="13sp" />

    <!-- Bottom-Left: Tune -->

    <!-- Bottom-Center: Tap -->
    <!-- Bottom-Left: Tune -->
    <TextView
        android:id="@+id/textTune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="38dp"
        android:text="Tune"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- Bottom-Center: Tap -->
    <TextView
        android:id="@+id/textTap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="Tap"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <!-- Bottom-Right: Connect -->
    <TextView
        android:id="@+id/textConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="38dp"
        android:text="Connect"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>
